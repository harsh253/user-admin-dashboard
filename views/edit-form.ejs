<%- include('./partials/header.ejs') -%>
<h1>Edit User</h1>
</br>
<form action="/<%= data[0]._id %>/edit" method="post">
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" class="form-control" value="<%= data[0].username %>" placeholder="Username">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" class="form-control" value="<%= data[0].password %>" placeholder="Password">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" class="form-control" value="<%= data[0].email %>" placeholder="Email">
    </div>
    <button type="submit" class="btn btn-md">Submit</button>
</form>
<a href="/">View all users</a>
<%- include('./partials/footer.ejs') -%>